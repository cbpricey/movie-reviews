@model Movie

@{
    ViewBag.Title = "Delete Movie";
}

<h2>Delete Actor</h2>

<div>
    <h4>Are you sure you want to delete this Movie?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>

        <dt>IMDBLink</dt>
        <dd>@Html.DisplayFor(model => model.IMDBLink)</dd>

        <dt>Genre</dt>
        <dd>@Html.DisplayFor(model => model.Genre)</dd>

        <dt>ReleaseYear</dt>
        <dd>@Html.DisplayFor(model => model.ReleaseYear)</dd>

        <dt>PosterUrl</dt>
        <dd>@Html.DisplayFor(model => model.PosterUrl)</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Movies", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)

    <div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
